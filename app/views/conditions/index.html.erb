<p id="notice"><%= notice %></p>

<h1>Listing Conditions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th>Trace at</th>
      <th>Status</th>
      <th>Delete flag</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.user_id %></td>
        <td><%= condition.comment %></td>
        <td><%= condition.trace_at %></td>
        <td><%= condition.status %></td>
        <td><%= condition.delete_flag %></td>
        <td><%= condition.created_at %></td>
        <td><%= condition.updated_at %></td>
        <td><%= link_to 'Show', condition %></td>
        <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
        <td><%= link_to 'Destroy', condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

